// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 1. Tabel Pengguna (Pasien, Dokter, Admin)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("PATIENT") // PATIENT, ADMIN
  nik       String?  @unique
  
  // Relasi: Satu user bisa punya banyak catatan kesehatan
  checkups  HealthCheckup[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 2. Tabel Catatan Kesehatan (Jantung dari aplikasi ini)
model HealthCheckup {
  id         Int      @id @default(autoincrement())
  systolic   Int
  diastolic  Int
  bloodSugar Int?
  weight     Float?
  height     Int?     // <-- TAMBAHAN BARU (Satuan cm)
  
  status     String
  notes      String? @db.Text // @db.Text agar muat catatan panjang
  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  createdAt  DateTime @default(now())
}

// 3. Tabel Edukasi (Artikel/Video untuk Admin)
model Education {
  id        Int      @id @default(autoincrement())
  title     String
  category  String   // "Artikel" atau "Video"
  content   String   @db.Text // Isi artikel atau Link Youtube
  thumbnail String?  // URL gambar

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}